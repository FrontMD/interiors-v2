                    <img src="./img/article/article-hero__video-bg-1440.webp" alt="img">
                </picture>
                button.article-hero__content-video__play
                    img(src="./img/svg/play.svg" alt="img")
                video(src="./video/about.mp4" clacc="article-hero__content-video__player" type="video/mp4" controls muted playsinline autoplay) 
